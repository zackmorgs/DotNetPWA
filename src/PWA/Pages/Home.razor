@page "/"

<PageTitle>Home</PageTitle>

<!-- Hero Section -->
<section class="bg-blue-900 text-white">
    <div class="container mx-auto px-4 py-16 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-4">Welcome to DotNetPWA</h1>
        <p class="text-lg md:text-xl mb-6">
            Build a PWA web application with Blazor and TailwindCSS.
        </p>
        <p>
            Offline support in the works.
        </p>
        <a href="/weather" class="mt-4 px-4 py-2 bg-blue-600 rounded inline-block">
            Test Weather
        </a>
    </div>
</section>
<section>
