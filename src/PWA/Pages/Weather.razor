

@page "/weather"
@inject HttpClient Http

<PageTitle>Weather</PageTitle>

<h1>Weather</h1>

<p>This component demonstrates adding, fetching data from the server.</p>

<input type="number" @bind-value="myTemp"/>
<input type="text" @bind-value="mySummary" />
<input type="date" @bind-value="myDate" />

<button @onclick="AddWeatherForecast">
    Add Weather Forecast
</button>

@if (forecasts == null)
{
    <p><em>No Forecasts Exist.</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th aria-label="Temperature in Celsius">Temp. (C)</th>
                <th aria-label="Temperature in Farenheit">Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.TemperatureF</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast[]? forecasts;

    public DateOnly myDate { get; set; }

    public int myTemp { get; set; } = 65;
    public string mySummary { get; set; } = "Warm";

    protected override async Task OnInitializedAsync()
    {
        forecasts = await Http.GetFromJsonAsync<WeatherForecast[]>("https://localhost:7092/weatherforecast?GetWeatherForecast");
    }

    public async Task AddWeatherForecast()
    {
        WeatherForecast myWeatherForecast = new WeatherForecast
        {
            Date = myDate,
            TemperatureC = myTemp,
            Summary = mySummary
        };

        await Http.PostAsJsonAsync("https://localhost:7092//weatherforecast?AddWeatherForecast", myWeatherForecast); // Use POST instead of PUT

    }

    public class WeatherForecast
    {
        public DateOnly Date { get; set; }

        public int TemperatureC { get; set; }

        public string? Summary { get; set; }

        public int TemperatureF => 32 + (int)(TemperatureC / 0.5556);
    }
}
